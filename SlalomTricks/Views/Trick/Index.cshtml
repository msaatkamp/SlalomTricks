@model IEnumerable<SlalomTricks.Models.Trick>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    @{
        ViewData["Title"] = "Table";
    }
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="mt-5">Table guide of freestyle slalom tricks</h1>
                <p class="lead">Last Update: 12/02/2019</p>
            </div>
        </div>
        <div class="row bg-main-color text-center text-white">

            <div class="col-4">Trick Family</div>
            <div class="col-4">Trick Name</div>
            <div class="col-4">Trick Value</div>
        </div>
        @foreach (var trick in Model)
        {
            <div class="row text-center">
                <div class="col-4">@trick.Family</div>
                <div class="col-4">@trick.Name</div>
                <div class="col-4">@trick.Value</div>
            </div>
        }

        <hr /><hr />

              <div class="container">
                  <div class="row">
                      <div class="col-lg-12 text-center">
                          <h3>Insert a new trick here:</h3>
                      </div>
                  </div>
                  <div class="row text-center">
                      <div class="col-4">Trick Family</div>
                      <div class="col-4">Trick Name</div>
                      <div class="col-4">Trick Value</div>
                  </div>
                  <form action="/trick/Create" method="post">
                      <div class="row text-center text-white">
                          <div class="col-4">
                              <!--Trick Family-->
                              <input type="text" name="family" maxlength="12" />
                          </div>
                          <div class="col-4">
                              <!--Trick Name-->
                              <input type="text" name="name" maxlength="24" />
                          </div>
                          <div class="col-4">
                              <!--Trick Value-->
                              <input type="number" name="value" max="100" />
                          </div>
                      </div>
                      <hr />
                      <div class="col-lg-12 text-center">
                          <button class="btn-success">Save</button>
                      </div>
                  </form>
              </div>
</body>
</html>

